<Window x:Class="QueueCopy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Height="379.232"
        Width="582"
        Title="QueueCopy"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <ListBox Grid.Column="0" ItemsSource="{Binding Jobs}" SelectedItem="{Binding SelectedJob}" DragEnter="JobList_DragEnter" Drop="JobList_Drop" AllowDrop="True" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5 5 5 5">
                        <Grid Margin="5 5 5 5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock AllowDrop="True" DragEnter="JobItem_DragEnter" Drop="JobItem_Drop" Text="{Binding Title}" Grid.Row="0" Grid.Column="0"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                                <Button Content="Play"></Button>
                                <Button Content="Pause"></Button>
                                <Button Content="Stop"></Button>
                            </StackPanel>
                            
                            <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="10" Margin="0,5,0,0"></ProgressBar>
                        </Grid>
                        
                        
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <GridSplitter Grid.Column="1" Width="5" ResizeDirection="Columns" HorizontalAlignment="Right" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext"/>

        <TabControl Grid.Column="2" >
            <TabItem Header="Job">
                <Grid DataContext="{Binding SelectedJob}" AllowDrop="True" DragEnter="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Source: " Grid.Row="0" Grid.Column="0" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop"></TextBlock>
                    <ListBox Grid.Row="0" Grid.Column="1" Margin="5" ItemsSource="{Binding Sources}" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop">
                    </ListBox>

                    <TextBlock Text="Target: " Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop"></TextBlock>
                    <Grid  Margin="5" Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding TargetFolder}" Grid.Column="0" VerticalAlignment="Center" IsReadOnly="{Binding TargetFolderIsReadOnly}"  AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop" Margin="5"></TextBox>
                        <Button Content="..." Command="{Binding TargetBrowse}" Grid.Column="1" Width="25" Margin="5"></Button>
                    </Grid>

                    <TextBlock Text="Folders: " Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop"></TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop">
                        <TextBlock Text="{Binding FoldersToDo}"></TextBlock>
                        <TextBlock Text=" / "></TextBlock>
                        <TextBlock Text="{Binding FoldersTotal}"></TextBlock>
                    </StackPanel>

                    <TextBlock Text="Files: " Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop"></TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop">
                        <TextBlock Text="{Binding FilesToDo}"></TextBlock>
                        <TextBlock Text=" / "></TextBlock>
                        <TextBlock Text="{Binding FilesTotal}"></TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Row="4" Grid.Column="0" Padding="5" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop">Status:</TextBlock>
                    <TextBlock Text="{Binding StepMessage}" Grid.Row="4" Grid.Column="1" Padding="5" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop"></TextBlock>
                    
                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2">
                        <TextBlock Text="{Binding ProgressMessage}" Padding="5" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop"></TextBlock>
                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Progress}" Height="10" AllowDrop="True" PreviewDragOver="SelectedJobDetail_DragEnter" Drop="SelectedJobDetail_Drop"></ProgressBar>
                    </StackPanel>
                    

                </Grid>
            </TabItem>
            <TabItem Header="Favorites">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListBox ItemsSource="{Binding Favorites}" HorizontalContentAlignment="Stretch" Grid.Row="0" MinHeight="100">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding ., UpdateSourceTrigger=PropertyChanged}" AllowDrop="True" PreviewDragOver="FavoriteItem_DragEnter" Drop="FavoriteItem_Drop" Grid.Column="0"></TextBox>
                                    <Button Content="-" Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.RemoveFavorite}" CommandParameter="{Binding .}" Padding="5,0" Margin="5,0" HorizontalAlignment="Right" Grid.Column="1"></Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid HorizontalAlignment="Stretch" Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">Enter a new Favorite folder here and press +</TextBlock>
                        <TextBox Text="{Binding FavoriteToAdd, UpdateSourceTrigger=PropertyChanged}" Name="FavoriteToAdd" Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Center"></TextBox>
                        <Button Content="+" Command="{Binding AddFavorite}" IsDefault="{Binding ElementName=FavoriteToAdd, Path=IsKeyboardFocused}" Padding="5,0" Margin="5,0" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center"></Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Recent">
                <Grid>
                    <ListBox ItemsSource="{Binding Recents}" HorizontalContentAlignment="Stretch" MinHeight="100" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding ., UpdateSourceTrigger=PropertyChanged}"  AllowDrop="True" PreviewDragOver="RecentItem_DragEnter" Drop="RecentItem_Drop" Grid.Column="0"></TextBox>
                                    <Button Content="-" Padding="5,0" Margin="5,0" HorizontalAlignment="Right" Grid.Column="1"></Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Folders">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0">System Folders:</TextBlock>
                        <ListBox Grid.Row="1" ItemsSource="{Binding SystemFolders}" MinHeight="100">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding .}" AllowDrop="True" DragEnter="SystemFolder_DragEnter" Drop="SystemFolder_Drop"></TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    </Grid>
                    <GridSplitter Grid.Row="1" Height="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" ResizeDirection="Rows"></GridSplitter>
                    <Grid Grid.Row="2" >
                        <TextBlock Grid.Row="0">Computer:</TextBlock>
                        <TreeView Grid.Row="1">
                            Next Version...
                        </TreeView>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
